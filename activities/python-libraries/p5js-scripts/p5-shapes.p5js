    clear();
    background(255);
    draw_grid();
    push();
    stroke("red");
    arc(4, 2, 5, 7, radians(45), radians(180), mode);
    pop();
    draw_point(4, 2, TOP);
    saveCanvas(`p5-arc-${mode.toUpperCase()}.png`);
  }
}

