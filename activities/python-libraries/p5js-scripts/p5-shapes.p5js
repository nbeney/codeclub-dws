  stroke("red");
  beginShape();
  vertex(2, 1);
  vertex(5, 1);
  vertex(5, 2);
  vertex(3, 2);
  vertex(3, 5);
  vertex(5, 5);
  vertex(5, 6);
  vertex(2, 6);
  endShape(CLOSE);
  pop();
  draw_point(2, 1, TOP);
  draw_point(5, 1, TOP);
  draw_point(5, 2, BOTTOM);
  draw_point(3, 2, TOP);
  draw_point(3, 5, BOTTOM);
  draw_point(5, 5, TOP);
  draw_point(5, 6, BOTTOM);
  draw_point(2, 6, BOTTOM);
