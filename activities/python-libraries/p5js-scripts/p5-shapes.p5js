  pop();
  draw_line(5, 6, 1, 3, "grey")
  draw_line(5, 3, 4, 1, "grey")
  draw_point(5, 6, RIGHT);
  draw_point(1, 3, RIGHT);
  draw_point(4, 1, RIGHT);
